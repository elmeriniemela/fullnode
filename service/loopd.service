[Unit]
Description=loopd
Requires=lnd.service
After=lnd.service


[Service]
User=elmeri
WorkingDirectory=/home/elmeri/bitcoin-extdrive
ExecStart=/home/elmeri/bitcoin-extdrive/fullnode/bin/loopd.sh
Restart=always
RestartSec=5
StartLimitInterval=400
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
